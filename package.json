{
  "name": "@jamsite/plugin-helmet",
  "version": "0.0.0",
  "description": "Add security HTTP headers with helmet middleware.",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "lint": "standard --verbose *.js **/*.js | snazzy",
    "test:ava": "nyc ava",
    "test": "npm run lint",
    "preversion": "npm test"
  },
  "keywords": [
    "jamstack",
    "jamstack-plugin",
    "helmet"
  ],
  "author": "Aleksandr Tsertkov <tsertkov@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^2.4.0",
    "nyc": "^15.0.0",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamsite/plugin-helmet.git"
  },
  "bugs": {
    "url": "https://github.com/jamsite/plugin-helmet/issues"
  },
  "homepage": "https://github.com/jamsite/plugin-helmet#readme",
  "dependencies": {
    "micro-helmet": "^1.0.1"
  }
}
